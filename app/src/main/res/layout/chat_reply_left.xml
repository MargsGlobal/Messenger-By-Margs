<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/user"
        android:id="@+id/profile_image"
        android:layout_below="@+id/replyline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replytextview"
        android:text=""
        android:layout_marginStart="35dp"
        android:visibility="visible"
        android:layout_toEndOf="@id/show_message"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/replyline"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/replytextview"
        android:layout_toEndOf="@id/show_message"
        android:src="@drawable/curved_line_left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginStart="5dp"
        android:text="Hello"
        android:textColor="#000"
        android:padding="8dp"
        android:id="@+id/show_message"
        android:textSize="18dp"
        android:layout_below="@+id/replyline"

        android:background="@drawable/background_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/show_message"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/timestamp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:visibility="gone"

        android:layout_below="@+id/show_message"
        />

</RelativeLayout>