<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/user"
        android:id="@+id/profile_image"
        android:layout_below="@+id/replytextus"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replytextthem"
        android:text="Hello how are you"
        android:layout_alignParentEnd="true"
        android:padding="6sp"
        android:textColor="@color/greytext"
        android:background="@drawable/reply_left_them"

        android:visibility="invisible"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replytextus"
        android:text="Hello how are you"
        android:layout_alignParentEnd="true"
        android:padding="6sp"
        android:textColor="@color/greytext"
        android:background="@drawable/reply_left_us"

        android:visibility="visible"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/replyline"

        android:layout_marginTop="15sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/replytextus"
        android:src="@drawable/curved_line_left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginStart="5dp"
        android:text="Hello"
        android:layout_marginEnd="45dp"
        android:autoLink="web|email|phone|map"
        android:textColorLink="@color/WebLink"
        android:textColor="@color/blacktext"
        android:padding="8dp"
        android:id="@+id/show_message"
        android:textSize="18dp"
        android:layout_below="@id/replytextus"
        android:layout_marginTop="30dp"

        android:background="@drawable/background_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/show_message"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/timestamp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:visibility="gone"

        android:layout_below="@+id/show_message"
        />

</RelativeLayout>